<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">

      <div class="card shadow-sm mb-4">
        <div class="card-body">

          <h3 class="card-title mb-3">Recommendation</h3>

          <% appt = @recommendation.appointment %>
          <p>
            <strong>Doctor:</strong>
            <%= appt.doctor.full_name %> | <strong><%= appt.doctor.category.name %></strong>
          </p>
          <p>
            <strong>Appointment date:</strong>
            <%= l appt.date, format: :long %>
            at <%= appt.time.strftime("%H:%M") %>
          </p>
          <hr>

          <div class="mt-3">
            <%= simple_format(@recommendation.content) %>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to 'Back to appointments',
                    appointments_path,
                    class: 'btn btn-outline-secondary' %>
      </div>

    </div>
  </div>
</div>

